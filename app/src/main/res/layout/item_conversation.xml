<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/left_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.pkmmte.view.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/left_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/robot"
            app:border_color="#FFFFFF"
            app:border_width="2dp"
            app:shadow="true"/>

        <TextView
            android:id="@+id/left_dialog"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:background="@drawable/rect_shape_cyan"
            android:text="你好，我是聊天机器人！"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/left_date"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="上午11:45"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_date"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="上午11:45"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/right_dialog"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="@drawable/rect_shape_lime"
            android:text="你好"
            android:textColor="#000000"
            android:textSize="14sp" />

        <com.pkmmte.view.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/right_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/cat2"
            app:border_color="#FFFFFF"
            app:border_width="2dp"
            app:shadow="true"/>

    </LinearLayout>


</LinearLayout>
